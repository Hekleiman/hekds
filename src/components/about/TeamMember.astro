---
interface Props {
  name: string;
  role: string;
  bio?: string;
  areasOfFocus?: string[];
  image?: string;
  photoPosition?: string;
  class?: string;
}

const { name, role, bio, areasOfFocus = [], image: imageProp, photoPosition: photoPositionProp, class: className } = Astro.props;

// Fallback image mapping for team members without CMS images
const fallbackImages: Record<string, string> = {
  'Harrison Kipper': '/images/team/Harry_Headshot.jpg',
  'Erik Kleiman': '/images/team/Erik_Headshot.jpg',
};

// Fallback photo position mapping for specific team members
const fallbackPhotoPositions: Record<string, string> = {
  'Erik Kleiman': 'object-[center_30%]',
};

const image = imageProp || fallbackImages[name];
const photoPosition = photoPositionProp || fallbackPhotoPositions[name] || 'object-top';
---

<div class:list={['border border-zinc-800/50 rounded-2xl overflow-hidden', className]}>
  <!-- Photo Area -->
  <div class="aspect-[4/3] bg-zinc-800/50 relative photo-container">
    {image ? (
      <>
        <img
          src={image}
          alt={`${name} headshot`}
          width="400"
          height="300"
          class:list={['w-full h-full object-cover', photoPosition]}
          loading="lazy"
        />
        <!-- Gradient overlay for seamless blend into dark background -->
        <div
          class="absolute inset-0 pointer-events-none"
          style="background: linear-gradient(to top, #09090b 0%, transparent 40%);"
        />
      </>
    ) : (
      <div class="w-full h-full flex items-center justify-center">
        <!-- Placeholder avatar icon -->
        <div class="w-20 h-20 bg-zinc-700/50 border border-zinc-700 rounded-full flex items-center justify-center">
          <div class="w-8 h-8 bg-zinc-600 rounded-full" />
        </div>
      </div>
    )}
  </div>

  <!-- Content -->
  <div class="p-6 space-y-4">
    <!-- Name & Role -->
    <div>
      <h3 class="text-xl font-bold text-white">
        {name}
      </h3>
      <p class="text-sm text-zinc-400">
        {role}
      </p>
    </div>

    <!-- Bio -->
    {bio && (
      <p class="text-zinc-400 text-sm leading-relaxed">
        {bio}
      </p>
    )}

    <!-- Areas of Focus -->
    {areasOfFocus.length > 0 && (
      <div class="pt-2">
        <p class="text-xs text-zinc-400 uppercase tracking-wider mb-3">
          Areas of Focus
        </p>
        <ul class="space-y-1.5">
          {areasOfFocus.map((area) => (
            <li class="text-zinc-400 text-sm flex items-center gap-2">
              <span class="text-zinc-400">â€¢</span>
              {area}
            </li>
          ))}
        </ul>
      </div>
    )}
  </div>
</div>

<style>
  .photo-container {
    box-shadow: inset 0 0 30px rgba(9, 9, 11, 0.5);
  }
</style>
