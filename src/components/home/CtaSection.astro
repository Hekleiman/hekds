---
import Section from '../ui/Section.astro';
import Button from '../ui/Button.astro';

interface Props {
  headline?: string;
  subtext?: string;
  primaryCta?: { text: string; href: string };
  class?: string;
}

const {
  headline = "Let's build something together.",
  subtext = "Every project is different. Whether you need a complete redesign or a new build from scratch, we'd love to hear about it. Pricing varies based on scope and timeline.",
  primaryCta = { text: 'Start a Conversation â†’', href: '/contact' },
  class: className,
} = Astro.props;
---

<Section class:list={['border-t border-border-primary', className]}>
  <div class="flex flex-col items-center text-center" data-animate="fade-up">
    <!-- Headline -->
    <h2 class="text-h2 mb-4">
      {headline}
    </h2>

    <!-- Subtext -->
    <p class="text-body-lg text-text-secondary max-w-[700px] mb-8">
      {subtext}
    </p>

    <!-- CTA Button -->
    <Button href={primaryCta.href}>{primaryCta.text}</Button>
  </div>
</Section>
